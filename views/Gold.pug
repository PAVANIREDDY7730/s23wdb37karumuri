extends layout

block content
  h1= title
  - let items = results
  div(class="container-fluid")
    div(class="row")
      each item,index in items
       let destination = `dispatch(\"/costumes/update?id=${item._id}\")
        div(class="col-sm-2",onClick=`buy(${index})`)
          p Weight is #{item.Gold_weight}
          p Shop is #{item.Gold_shop}
          p Cost is #{item.Gold_cost}
          //- Bonus Logic
          button.btn( class="btn-primary ml-1", onclick= destination) Update
  script.
    function buy(quantity) {
      quantity = quantity+1;
      alert(`You Purchased Item ${quantity}`);
    }